<div class="form-wapper">
  <%= form_with(model: @blog, url: choose_new_or_edit, local: true, class: "form") do |f| %>
    <div class="form-items">
      <p><%= f.label :title %></p>
      <p><%= f.text_field :title, class: "form-control", required: true %></p>
    </div>
    <div class="form-items">
      <p><%= f.label :content %></p>
      <p><%= f.text_area :content, class: "form-control", required: true, maxlength: 140 %></p>
    </div>
    <%= f.submit "投稿", class: "btn btn-primary" %>
  <% end %>
</div>