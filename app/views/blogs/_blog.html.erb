<div class="blog-wrapper">
  <div class="blog-header">
    <span class="blog-user"><%= blog.user.name %></span>
    <span class="blog_createdat"><%= time_ago_in_words(blog.created_at) %></span>
  </div>
  <div class="blog-items">
    <p class="blog-ttl"><span>title:</span> <%= blog.title %></p>
    <p class="blog-content"><%= blog.content %></p>
  </div>
  <% if blog.user_id != current_user.id %>
    <% if favorite %>
      <%= link_to "お気に入り解除する",favorite_path(favorite.id), class: "btn btn-danger", method: :delete %>
    <% else %>
      <%= link_to "お気に入りする", favorites_path(blog_id: blog.id), class: "btn btn-info", method: :post %>
    <% end %>
    <%= blog.favorites.count %>
  <% end %>
</div>